---
import "@fontsource/monaspace-neon";
import "@fontsource-variable/public-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>GopherHack</title>
  </head>
  <body>
    <section class="mainSection">
      <div class="content">
        <header>
          <div>
            <!-- left -->
              <a href={`${import.meta.env.BASE_URL}`} id="logo" aria-label="GopherHack Home">
                <img src="/gopherHack_Banner.png" alt="GopherHack" />
              </a>
          </div>

          <div>
            <!-- right -->
            <div class="links">
              <a href={`${import.meta.env.BASE_URL}pages/contests`}>Contests</a>
              <a href={`${import.meta.env.BASE_URL}pages/blog`}>Blog</a>
              <a href={`${import.meta.env.BASE_URL}pages/resources`}
                >Resources</a
              >
              <a href={`${import.meta.env.BASE_URL}pages/officers`}>Officers</a>
            </div>

            <div class="buttons"></div>
          </div>
        </header>

        <main>
          <slot />
        </main>

        <footer>
          &mdash;
          <a
            href="https://github.com/gopherhackumn/website"
            target="_blank"
            rel="noopener">Website source</a
          >
          &mdash;
        </footer>
      </div>
    </section>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;

    color: #beb7a2;
    background-color: black;

    font-size: 1.05rem;
    font-family: "Public Sans Variable", sans-serif;
    line-height: 1.5;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Monaspace Neon", monospace;
      color: #ffde7a;
    }
    a {
      color: #00ff00;
    }

    @media (max-width: 640px) {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  .mainSection {
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
  }

  footer {
    margin-top: 8rem;
    text-align: center;
    margin-bottom: 4rem;
  }

  .content {
    display: flex;
    height: 100%;
    flex-direction: column;

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;

      padding-bottom: 2.5rem;
      padding-top: 2.5rem;

    #logo {
      text-decoration: none;
      display: inline-flex;
      align-items: center;
    }

    #logo img {
      display: block;
      height: 80px;
      width: auto;
      max-width: 100%;
    }

      @media (max-width: 640px) {
        flex-direction: column;
      }
    }

    .links {
      display: flex;
      gap: 1rem;
    }
  }
</style>
